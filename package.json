  },
  "files": [
    "dist/*"
  ],
  "dependencies": {
    "@material/web": "1.0.0-pre.17"
  },
  "devDependencies": {
    "prettier": "3.0.3",
    "prettier-plugin-elm": "0.11.0",
    "sass": "^1.57.1"
  }
}
