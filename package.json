{
  "name": "elm-material",
  "version": "1.0.0",
  "description": "A thin wrapper for material components web components.",
  "author": "Gareth Latty <gareth@lattyware.co.uk>",
  "license": "AGPL-3.0-or-later",
  "repository": "github:Lattyware/elm-material",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./dist/material.mjs",
    "./_material.scss": "./dist/_material.scss"
  },
